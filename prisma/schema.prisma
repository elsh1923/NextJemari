generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id          String       @id @default(uuid())
  title       String
  slug        String       @unique
  authorId    String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  body        String
  coverImage  String?
  description String?
  published   Boolean      @default(false)
  readingTime Int?
  viewCount   Int          @default(0)
  author      user         @relation("AuthorArticles", fields: [authorId], references: [id])
  tags        ArticleTag[]
  bookmarks   Bookmark[]
  comments    Comment[]
  likes       Like[]
  reports     Report[]

  @@index([slug])
  @@index([authorId])
  @@index([published, createdAt])
  @@index([published, updatedAt])
  @@index([title])
  @@index([description])
}

model Tag {
  id        String       @id @default(uuid())
  name      String       @unique
  createdAt DateTime     @default(now())
  slug      String       @unique
  articles  ArticleTag[]

  @@index([slug])
  @@index([name])
}

model ArticleTag {
  articleId String
  tagId     String
  article   Article @relation(fields: [articleId], references: [id])
  tag       Tag     @relation(fields: [tagId], references: [id])

  @@id([articleId, tagId])
}

model Comment {
  id        String    @id @default(uuid())
  authorId  String
  articleId String
  createdAt DateTime  @default(now())
  body      String
  parentId  String?
  updatedAt DateTime  @updatedAt
  article   Article   @relation(fields: [articleId], references: [id], onDelete: Cascade)
  author    user      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Comment[] @relation("CommentReplies")

  @@index([articleId])
  @@index([authorId])
  @@index([parentId])
}

model Like {
  id        String   @id @default(uuid())
  userId    String
  articleId String
  createdAt DateTime @default(now())
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, articleId])
  @@index([articleId])
  @@index([userId])
}

model Bookmark {
  id        String   @id @default(uuid())
  userId    String
  articleId String
  createdAt DateTime @default(now())
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, articleId])
  @@index([userId])
  @@index([articleId])
}

model Follow {
  id          String   @id @default(uuid())
  followerId  String
  followingId String
  createdAt   DateTime @default(now())
  follower    user     @relation("Follower", fields: [followerId], references: [id], onDelete: Cascade)
  following   user     @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
}

model Subscriber {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())

  @@index([email])
}

model Report {
  id         String       @id @default(uuid())
  reason     String
  articleId  String
  reporterId String?
  createdAt  DateTime     @default(now())
  status     ReportStatus @default(PENDING)
  article    Article      @relation(fields: [articleId], references: [id], onDelete: Cascade)
  reporter   user?        @relation(fields: [reporterId], references: [id])

  @@index([articleId])
  @@index([reporterId])
  @@index([status])
}

model account {
  id           String    @id
  userId       String
  accountId    String
  providerId   String
  accessToken  String?
  refreshToken String?
  expiresAt    DateTime?
  password     String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime
  user         user      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model session {
  id        String   @id
  userId    String
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model user {
  id            String     @id
  email         String     @unique
  name          String?
  emailVerified Boolean?
  image         String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime
  username      String     @unique
  bio           String?
  role          UserRole   @default(USER)
  passwordHash  String?
  articles      Article[]  @relation("AuthorArticles")
  bookmarks     Bookmark[]
  comments      Comment[]
  followers     Follow[]   @relation("Follower")
  following     Follow[]   @relation("Following")
  likes         Like[]
  reports       Report[]
  account       account[]
  session       session[]

  @@index([email])
  @@index([username])
}

model verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?
}

enum UserRole {
  USER
  MODERATOR
  ADMIN
}

enum ReportStatus {
  PENDING
  REVIEWED
  RESOLVED
  DISMISSED
}
